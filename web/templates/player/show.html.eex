<h2>Show player</h2>

<ul>

  <li>
    <strong>Nickname:</strong>
    <%= @player.nickname %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @player.email %>
  </li>

  <li>
    <strong>Verified:</strong>
    <%= inspect(@player.email_verified) %>
  </li>

</ul>

<%= link "Edit", to: player_path(@conn, :edit, @player) %>
<%= link "Back", to: player_path(@conn, :index) %>
